// Echapson v1
// 
// animation: [
//    <animation-name>, <animation-timing-function>, <animation-delay>, 
//    <animation-iteration-count>, <animation-direction>, <animation-fill-mode>
//    ], [apply another animation]
//            
// transition: [ 
//    <transition-property> <transition-duration> 
//    <transition-timing-function> <transition-delay> 
//    ], [comma separates multiple transitions]
//    
// ease-in-out = cubic-bezier(0.420, 0.000, 0.580, 1.000)
// ease-in     = cubic-bezier(0.420, 0.000, 1.000, 1.000)
// ease        = cubic-bezier(0.250, 0.100, 0.250, 1.000)

@import url("http://fonts.googleapis.com/css?family=Open+Sans:400,300")

global-reset()

// VARIABLES
// --------

// Colors
$app_bg_color = #aaa

// Parameters
$usRollParts  = 3

// Baseline grid
$basefont = 16px
$baseline = 1.32em
$baseTop  = 1.6em

$heightUsHeader = 7.84em
$offsetLeftUs   = 20%

// Trail card
$heightCard = 88%
$dur = .4s


// COMMONS
// --------

.cur 
  cursor pointer

.rel 
  position relative
  left 0
  top 0

.abs-base
  position absolute
  top 0

.abs-l
  @extend .abs-base
  left 0

.abs-r
  @extend .abs-base
  right 0


// LAYOUT
// --------

html, body 
  width 100%
  height 100%
  background-color #888
  font: normal $basefont/$baseline "Open Sans", Arial, sans-serif
  overflow: auto

.app 
  @extend .abs-l
  width 100%
  height 100%
  overflow hidden

.chrome 
  @extend .rel
  left -100%
  width 200%
  height 100%
  transition(left .8s cubic-bezier(0.680, -0.320, 0.265, 1.320))

  &.in-aside
    // TODO: Precisely check the size of the div.
    left -1 * $offsetLeftUs

.map, .aside 
  @extend .abs-l
  width 50%
  height 100%

.map 
  left 50%

#mcan 
  @extend .rel
  width 100%
  height 100%

.pop 
  position absolute
  left 1.6em
  top 3.2em
  z-index 4
  background-color red


// TRAIL
// --------

.tr-wrap 
  position absolute
  right $baseTop
  top $baseTop
  width 32%
  height $heightCard

.tr
  @extend .rel
  width 100%
  height 100%
  animation(stage_rtl .8s)

.tc, .tn 
  position absolute
  z-index 2
  width 100%
  height 100%
  background-color #fff
  box-shadow(0 4px 8px #888)

.tn 
  z-index 1
  background-color red

.surface 
  opacity 0
  animation(surface $dur)
  animation-delay(.08s)
  animation-fill-mode(forwards)

.slide
  animation(slide $dur)
  animation-fill-mode(forwards)

.tr.fx1
  .tc
    @extends .slide
  .tn
    @extends .surface

.tr.fx2
  .tc
    @extends .surface
  .tn
    @extends .slide


// SIDE PANEL
// --------

.aside 
  position relative
  background-color rgba(#1a1a1a, .64)

#logo
  @extend .cur
  @extend .abs-l
  left 100%
  top $baseTop
  z-index 2
  padding 0 0 0 1.6em
  width 7.84em
  height $heightUsHeader
  background-image url('data:image/png;base64,')
  background-color rgba(#1a1a1a, .64)
  background-position 68% 50%
  background-repeat no-repeat
  // These 3 following properties is for text replacement.
  text-indent 800%
  white-space nowrap
  overflow hidden

.us 
  @extend .rel
  left $offsetLeftUs
  width 100% - $offsetLeftUs
  height 100%

.us-hdr 
  $offsetLeft = 4%

  @extend .abs-l
  left $offsetLeft
  top $baseTop
  z-index 4
  box-sizing(border-box)
  padding $baseTop
  padding-left 2 * $baseTop
  width 100% - $offsetLeft
  height $heightUsHeader
  background-color rgba(#111, .8)
  color #fff

  h2 
    padding-top .2em
    padding-bottom .56em
    font-size 2.16em

.us-stt 
  $subtitleFontSize = 1.36em

  display inline-block
  height 1.5 * $subtitleFontSize
  overflow hidden

  [class*="sec"]
    display block
    height 1.5 * $subtitleFontSize

  em
    font-size $subtitleFontSize

.us-stt-roll
  @extend .rel
  height $usRollParts * 100%
  transition(transform .8s)

.us-nav
  $bullSize       = .425em
  $bullMargin     = .64em

  @extend .abs-r
  right 2 * $baseTop
  top 50%
  margin-top -0.5 * ($usRollParts * $bullSize + 2 * $bullMargin)

  [class*="btn"]
    display block
    margin-top $bullMargin
    margin-bottom $bullMargin
    margin-left 2.5 * $bullSize
    width 2.5 * $bullSize
    height $bullSize
    border-radius .4em
    background-color rgba(#fff, .4)

    &.on 
      margin-left 0
      width 5 * $bullSize

  [class*="btn"]:first-child,
  [class*="btn"]:last-child
    margin-top 0
    margin-bottom 0

.us-roll
  @extend .rel
  width 100%
  height $usRollParts * 100%
  transition(transform .8s)

  [class*="sec"]
    width 100%
    height 100% * (1 / $usRollParts)

    &:first-child
      background-image url("//www.publicdomainpictures.net/pictures/20000/velka/subway-car.jpg")

.to-sec-1 
  .us-roll
    transform(translateY(0))
  .us-stt-roll
    transform(translateY(0))

.to-sec-2 
  .us-roll
    transform(translateY((-1/$usRollParts) * 100%))
  .us-stt-roll
    transform(translateY((-1/$usRollParts) * 100%))

.to-sec-3 
  .us-roll
    transform(translateY((-2/$usRollParts) * 100%))
  .us-stt-roll
    transform(translateY((-2/$usRollParts) * 100%))



// KEYFRAMES FOR ANIMATIONS
// --------

@keyframes slide
  0%
    opacity 1
    transform(translateX(0))
  100%
    z-index 1
    opacity 0
    transform(translateX(100%))


@keyframes surface
  0%
    z-index 2
    opacity 0.4
    transform(scale(0.98))
  100%
    opacity 1
    transform(scale(1))


@keyframes stage_rtl
  0% 
    opacity 0
    transform(translateX(1.6em))
  100%
    opacity 1
    transform(translateX(O))


@keyframes stage_ltr
  0% 
    opacity 0
    transform(translateX(-1.6em))
  100%
    opacity 1
    transform(translateX(O))


