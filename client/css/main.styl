// Echapson v1
// 
// animation: [
//    <animation-name>, <animation-timing-function>, <animation-delay>, 
//    <animation-iteration-count>, <animation-direction>, <animation-fill-mode>
//    ], [apply another animation]
//            
// transition: [ 
//    <transition-property> <transition-duration> 
//    <transition-timing-function> <transition-delay> 
//    ], [comma separates multiple transitions]


global-reset()

// VARIABLES
// --------

// Colors
$app_bg_color = #aaa

// Baseline grid
$basefont = 16px
$baseline = 1.32em

// Trail card
$heightCard = 88%
$dur = .4s


// EXTRAS
// --------

.cur 
  cursor pointer


// LAYOUT
// --------

html, body 
  width 100%
  height 100%
  font-sans-serif(normal, $basefont, $baseline, "Open Sans")
  overflow: auto

.app 
  position absolute
  left 0
  top 0
  width 100%
  height 100%
  overflow hidden

.chrome 
  position relative
  left -100%
  top 0
  width 200%
  height 100%
  transition(left .8s)

  &.in-aprop
    // TODO: Precisely check the size of the div.
    left -10%

.map, .aprop 
  position absolute
  left 0
  top 0
  width 50%
  height 100%

.map 
  left 50%

#mcan 
  width 100%
  height 100%

.pop 
  position absolute
  left 1.6em
  top 3.2em
  z-index 4
  background-color red


// TRAIL
// --------

.tr-wrap 
  position absolute
  right 1.6em
  top 1.6em
  width 32%
  height $heightCard

.tr
  position relative
  top 0
  width 100%
  height 100%
  animation(stage_rtl .8s)

.tc, .tn 
  position absolute
  z-index 2
  width 100%
  height 100%
  background-color #fff
  box-shadow(0 4px 8px #888)

.tn 
  z-index 1
  background-color red

.surface 
  opacity 0
  animation(surface $dur)
  animation-delay(.08s)
  animation-fill-mode(forwards)

.slide
  animation(slide $dur)
  animation-fill-mode(forwards)

.tr.fx1
  .tc
    @extends .slide
  .tn
    @extends .surface

.tr.fx2
  .tc
    @extends .surface
  .tn
    @extends .slide


// A PROPOS
// --------

.aprop 
  @extend .cur
  position relative
  background-color rgba(#1a1a1a, .64)

#logo
  position absolute
  left 100%
  top 1.6em
  z-index 2
  padding 0 0 0 1.6em
  width 7.84em
  height 7.84em
  background-image url('data:image/png;base64,')
  background-color rgba(#1a1a1a, .64)
  background-position 68% 50%
  background-repeat no-repeat

  // FIXME: Animation starts each time the template is rendered.
  // animation(stage_ltr .8s 0 1)

  // These 3 following properties is for text replacement.
  text-indent 800%
  white-space nowrap
  overflow hidden


// KEYFRAMES FOR ANIMATIONS
// --------

@keyframes slide
  0%
    opacity 1
    transform(translateX(0))
  100%
    z-index 1
    opacity 0
    transform(translateX(100%))


@keyframes surface
  0%
    z-index 2
    opacity 0.4
    transform(scale(0.98))
  100%
    opacity 1
    transform(scale(1))


@keyframes stage_rtl
  0% 
    opacity 0
    transform(translateX(1.6em))
  100%
    opacity 1
    transform(translateX(O))


@keyframes stage_ltr
  0% 
    opacity 0
    transform(translateX(-1.6em))
  100%
    opacity 1
    transform(translateX(O))


